<?import eu.hansolo.medusa.Gauge?>
<BorderPane fx:controller="com.mbcoder.iot.weatherstation.Controller" xmlns:fx="http://javafx.com/fxml"
            stylesheets="@style.css" VBox.vgrow="ALWAYS" maxHeight="Infinity">
        <top>
            <HBox fx:id="hBox" styleClass="panel-region" alignment="CENTER" spacing="5">
                <CheckBox fx:id="chkSimulated" text="Simulated" selected="true"/>
                <Button fx:id="btnConnectSensor" onAction="#handleSensorConnectButton" text="Connect sensor"/>
                <Button fx:id="btnLogWeather" onAction="#startWeatherLogging" text="Log weather"/>
            </HBox>
        </top>

    <left>
        <Label fx:id="labelTemp" text="..." styleClass="panel-upper"/>
        <Gauge fx:id="tempGauge" />

    </left>
    <right>
        <Label fx:id="labelPressure" text="..." styleClass="panel-upper"/>

    </right>

        <bottom>
            <!--Controls box-->
            <VBox fx:id="vBox" StackPane.alignment="BOTTOM_CENTER" maxWidth="Infinity" maxHeight="Infinity" styleClass="panel-region">
                <LineChart fx:id="tempChart" title="Profile" animated="false">
                    <xAxis>
                        <NumberAxis fx:id="xAxisTemp" side="BOTTOM" label="Observation" tickUnit="0"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis fx:id="yAxisTemp" side="LEFT" label="Temp (C)" tickUnit="0"/>
                    </yAxis>
                </LineChart>
                <LineChart fx:id="pressureChart" title="Profile" animated="false">
                    <xAxis>
                        <NumberAxis fx:id="xAxisPressure" side="BOTTOM" label="Observation" tickUnit="0"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis fx:id="yAxisPressure" side="LEFT" label="Pressure" tickUnit="0"/>
                    </yAxis>
                </LineChart>
            </VBox>
        </bottom>
    </BorderPane>

